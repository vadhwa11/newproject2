	<parameter name="referral_patient_header_id" isForPrompting="true" class="java.lang.Integer">
		<defaultValueExpression ><![CDATA[new Integer(0)]]></defaultValueExpression>
	</parameter>
	<queryString><![CDATA[select 
d.referral_no,
h.covernote_number,
(isNull(md.covering_letter_authority,'') +' '+ isNull(md.division_name, '')) as ToAuthority,
r.relation_name,
hosp.impanneled_hospital_name,

(isNull(p.p_first_name,'')+ ' ' +isNull(p.p_middle_name,'')+ ' ' +isNull(p.p_last_name,'')) as patient_name,

(isNull(e.first_name,'')+ ' ' +isNull(e.middle_name,'')+ ' ' +isNull(e.last_name,'')+'/'+isNull(e.service_no,'')) as emp_name,
bill.bill_date,
bill.bill_no,
bill.admin_bill_amt,
CASE
     WHEN (bill.admin_bill_amt < bill.total_bill_amt)
               THEN bill.admin_remarks 
               ELSE ''
       END as remarks

FROM
     
referral_patient_billing bill

   LEFT OUTER JOIN referral_patient_details d ON bill.referral_details_id = d.referral_patient_details_id
   LEFT OUTER JOIN referral_patient_header h  ON h.referral_header_id = d.referral_patient_header_id
   LEFT OUTER JOIN mas_impanneled_hospital hosp ON h.to_hospital_id = hosp.impanneled_hospital_id
    LEFT OUTER JOIN mas_relation r ON r.relation_id = h.relation_id
    LEFT OUTER JOIN patient p ON p.hin_id = h.hin_id
 LEFT OUTER JOIN mas_employee e ON e.employee_id = p.employee_id
 LEFT OUTER JOIN mas_division md ON md.division_id = e.division_id
where h.referral_header_id = $P{referral_patient_header_id}]]></queryString>

