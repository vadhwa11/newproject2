	<queryString><![CDATA[select case when  $P{inpatient_id} != ""
   then (select d.department_name
            from inpatient i,mas_department d
             where i.department_id = d.department_id and i.inpatient_id =  $P{inpatient_id})
  else (select d.department_name from visit v, mas_department d
             where v.department_id = d.department_id and v.visit_id =  $P{visit}) end department]]></queryString>

